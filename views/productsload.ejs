<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/head.ejs') %> 
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
</head>

<body class="product_load_body">
    <%- include("./partials/header2.ejs") %>
    
    <div class="container p-4">
        <form method="post" action="/paquetes/productsLoad" enctype="multipart/form-data" class="card card-body">
            <div class="form-group">
                <label for="name">Nombre</label>
                <input type="text" class="form-control" name="name" id="name" placeholder="Nombre" autofocus required autocomplete="off">
            </div>
            <div class="form-group">
                <label for="title">Titulo</label>
                <input type="text" class="form-control" name="title" id="title" placeholder="Titulo" autofocus required autocomplete="off">
            </div>
            <div class="form-group">
                <label for="description">Descripcion</label>
                <textarea name="description" id="description" rows="2" class="form-control" required></textarea>
            </div>
            <div class="form-group">
                <label for="precio">Precio</label>
                <input type="number" class="form-control" name="precio" id="precio" placeholder="Precio" autofocus required autocomplete="off">
            </div>
            <div class="form-group">
                <label for="image">Imagenes</label>
                <input type="file" class="form-control" name="image" id="image" placeholder="Inserte su imagen" autofocus required autocomplete="off" value="">
            </div>
            <br>
          
            <input type="submit" value="Guardar" class="btn btn-primary">
        </form>
    </div>

</body>
</html>