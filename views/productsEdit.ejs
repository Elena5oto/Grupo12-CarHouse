<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/head.ejs') %> 
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
</head>

<body class="product_load_body">
    <%- include("./partials/header2.ejs") %>
    <div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Est√°s editando: <i>
					<%= productToEdit.name %>
				</i></h2>
			</div>
		</div>
    <div class="container p-4">
        <form method="POST" action="/paquetes/producto/productsEdit/<%= productToEdit.id %>?_method=PUT"" class="card card-body">
            <div class="form-group">
                <label for="name">Nombre</label>
                <input type="text" class="form-control" name="name" id="name" placeholder="Nombre" autofocus required autocomplete="off" value="<%= productToEdit.name %>">
            </div>
            <div class="form-group">
                <label for="title">Titulo</label>
                <input type="text" class="form-control" name="title" id="title" placeholder="Titulo" autofocus required autocomplete="off"value="<%= productToEdit.title %>">
            </div>
            <div class="form-group">
                <label for="description">Descripcion</label>
                <textarea name="description" id="description" rows="2" class="form-control" required ><%= productToEdit.description %></textarea>
            </div>
            <div class="form-group">
                <label for="price">Precio</label>
                <input type="text" class="form-control" name="price" id="price" placeholder="Precio" autofocus required autocomplete="off" value="<%= productToEdit.price %>">
            </div>
            <div class="form-group">
                <label for="image">Imagenes</label>
                <input type="text" class="form-control" name="image" id="image" placeholder="Inserte su imagen" autofocus required autocomplete="off" value="<%= productToEdit.image %>">
            </div>
            <br>
            <%- include('./partials/validaciones.ejs') %> 
          
            <input type="submit" value="Editar" class="btn btn-primary">
        </form>
    </div>

</body>
</html>