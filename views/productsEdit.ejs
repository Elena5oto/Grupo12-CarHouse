<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/head.ejs') %> 
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
</head>

<body class="product_load_body">
    <%- include("./partials/header.ejs") %>
    <div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Est√°s editando: <i>
					<%= productToEdit.name %>
				</i></h2>
			</div>
		</div>
    <div class="container p-4">
        <form method="POST" action="/paquetes/producto/productsEdit/<%= productToEdit.id %>?_method=PUT"" enctype="multipart/form-data" class="card card-body" id="form_productsload">
            <div class="form-group" id="group_name">
                <label for="name" class="control-label">Nombre</label>
                <input type="text" class="form-control" name="name" id="name" placeholder="Nombre" autofocus  autocomplete="off" value="<%= productToEdit.name %>">
                <p class="text-muted" id="notification_name"></p>
            </div>
            <div class="form-group" id="group_title">
                <label for="title" class="control-label">Titulo</label>
                <input type="text" class="form-control" name="title" id="title" placeholder="Titulo" autofocus  autocomplete="off"value="<%= productToEdit.title %>">
                <p class="text-muted" id="notification_title"></p>
            </div>
            <div class="form-group" id="group_description">
                <label for="description" class="control-label">Descripcion</label>
                <textarea name="description" id="description" rows="2" class="form-control"  ><%= productToEdit.description %></textarea>
                <p class="text-muted" id="notification_description"></p>
            </div>
            <div class="form-group" id="group_price">
                <label for="price" class="control-label">Precio</label>
                <input type="number" class="form-control" name="price" id="precio" placeholder="Precio" autofocus autocomplete="off" value="<%= productToEdit.price %>">
                <p class="text-muted" id="notification_price"></p>
            </div>
            <div class="form-group" id="group_image">
                <label for="image" class="control-label">Imagenes</label>
                <input type="file" class="form-control" name="image" id="image" placeholder="Inserte su imagen" autofocus autocomplete="off" value="<%= productToEdit.image %>">
                <p class="text-muted" id="notification_image"></p>
            </div>
            <br>
            <%- include('./partials/validaciones.ejs') %> 
          
            <input type="submit" value="Editar" class="btn btn-primary">
            <p class="text-danger" id="notification_general"></p>
        </form>
    </div>

    <script src="/js/validacion_productload.js"></script>

</body>
</html>